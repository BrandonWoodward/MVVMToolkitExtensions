<UserControl
    x:Class="AutoWireViewModel.Demos.WPF.Views.ViewA"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <StackPanel>

        <TextBlock
            Margin="10"
            HorizontalAlignment="Center"
            Text="{Binding Message,
                           Mode=OneWay}" />

        <Button
            Width="100"
            Height="50"
            Margin="10"
            Command="{Binding ShowDialogACommand,
                              Mode=OneTime}"
            Content="Show Dialog A" />

        <Button
            Width="100"
            Height="50"
            Margin="10"
            Command="{Binding ShowDialogBCommand,
                              Mode=OneTime}"
            Content="Show Dialog B" />
    </StackPanel>

</UserControl>
